{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es5",
        // TODO: Enable this two rules from our TSConfig
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "exclude": [
        "docs/*",
        "node_modules/*",
        "coverage/*"
    ],
    "angularCompilerOptions": {
        "genDir": "compiled"
    }
}
